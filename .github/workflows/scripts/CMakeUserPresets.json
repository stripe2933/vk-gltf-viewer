{
  "version": 6,
  "configurePresets": [
    {
      "name": "windows-latest",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/EHsc /wd5050",
        "VCPKG_TARGET_TRIPLET": "x64-windows-release",
        "EXACT_BOUNDING_VOLUME_USING_CGAL": "ON"
      }
    },
    {
      "name": "macos-latest",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld",
        "VCPKG_TARGET_TRIPLET": "arm64-macos-clang-release"
      }
    },
    {
      "name": "macos-15",
      "inherits": "macos-latest",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm@18/bin/clang",
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm@18/bin/clang++",
        "VCPKG_TARGET_TRIPLET": "arm64-macos-clang-18-release"
      }
    },
    {
      "name": "ubuntu-latest",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -Wno-deprecated-declarations",
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++ -lc++abi",
        "VCPKG_TARGET_TRIPLET": "x64-linux-clang-release",
        "EXACT_BOUNDING_VOLUME_USING_CGAL": "ON"
      },
      "environment": {
        "VCPKG_ROOT": "$env{VCPKG_INSTALLATION_ROOT}"
      }
    },
    {
      "name": "ubuntu-24.04-arm",
      "inherits": "ubuntu-latest",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm64-linux-clang-release"
      }
    }
  ]
}